{% extends "layout.njk" %}
{% block content %}

    <div class="card table-container">
      <a href="/members/create">Novo</a>
      <table>
        <thead>
          <tr>
            <th>Membro</th>
            <th>Sangue</th>
            <th>Ação</th>
          </tr>
          
        </thead>
        <tbody>
          {% for member in members %}
            <tr>
              <td>
                <div>
                  <span style="background-image: url({{member.avatar_url}})"></span>
                {{member.name}}
                </div>
                
              </td>
              <td>
                <span>{{member.blood}}</span>
              </td>
              <td>
                <a href="/members/{{member.id}}">ver</a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

{% endblock %}