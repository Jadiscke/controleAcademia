{% extends "layout.njk" %}
{% set instructors = true %}
{% block content %}

    <form class="card" method="POST" action="/instructors?_method=PUT">
      <section 
      class="avatar" 
      style="background: url({{ instructor.avatar_url if instructor.avatar_url else 'https://source.unsplash.com/collection/3465564/500x500' }}) no-repeat center center / cover;"></section>
      <section class="details">

        <h3>Editar Instrutor</h3>
        <input type="hidden" name="id" value="{{instructor.id}}">
        {% include 'instructors/fields.njk'%}

      </section>
    </form>

{% endblock %}