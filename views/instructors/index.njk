{% extends "layout.njk" %}
{% set instructors = true %}
{% block content %}

    <div class="card table-container">
      <table>
        <thead>
          <tr>
            <th>Instructor</th>
            <th>Atendimento</th>
            <th>Ação</th>
          </tr>
          
        </thead>
        <tbody>
          {% for instructor in dataInstructors %}
            <tr>
              <td>
                {{instructor.name}}
              </td>
              <td>
                {{instructor.services}}
              </td>
              <td>
                <a href="/instructors/{{instructor.id}}">ver</a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

{% endblock %}